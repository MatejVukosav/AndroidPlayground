<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.playground.android.vuki.services.com.playground.android.vuki.activites.MainActivity">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/start_service"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/stop_service"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnStart"/>

        <Button
            android:id="@+id/btnStartBoundService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start BoundService" />
        <Button
            android:id="@+id/btnStopBoundService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop BoundService" />

        <Button
            android:id="@+id/btnChkCounterBoundService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Counter BoundService" />

    </android.support.constraint.ConstraintLayout>

</layout>
